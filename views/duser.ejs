<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MySQL Table Viewer</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f8f9fa;
      padding: 20px;
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
    }

    table {
      width: 80%;
      margin: 20px auto;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }

    th, td {
      padding: 15px;
      text-align: center;
    }

    th {
      background-color: #007bff;
      color: #fff;
    }

    tbody tr:hover {
      background-color: #f2f2f2;
    }

    form {
      display: inline-block;
      margin-right: 5px;
    }

    button {
      border: none;
      cursor: pointer;
      border-radius: 4px;
      transition: background-color 0.3s ease;
    }

    button:hover {
      opacity: 0.9;
    }

    button[type="submit"] {
      background-color: #dc3545;
      color: #fff;
      padding: 8px 15px;
    }

    button[type="submit"]:hover {
      background-color: #c82333;
    }

    label {
      margin-right: 10px;
    }

    input {
      margin-right: 10px;
      padding: 8px;
      border-radius: 4px;
      border: 1px solid #ccc;
    }

  </style>
</head>
<body>
  <div class="container">
    <h1>MySQL Table Viewer</h1>
    <table class="table table-bordered table-striped">
      <thead class="thead-dark">
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for (let row of rows) { %>
          <tr>
            <td><%= row.id %></td>
            <td><%= row.name %></td>
            <td>
              <!-- Update form -->
              <form action="/duser/update/<%= row.id %>" method="GET">
                <button type="submit" class="btn btn-warning btn-sm">Update</button>
              </form>

              <!-- Delete form -->
              <form action="/duser/delete/<%= row.id %>" method="POST" class="d-inline-block">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <!-- Update form (hidden by default) -->
    <% if (selectedRow) { %>
      <form action="/duser/update/<%= selectedRow.id %>" method="POST">
        <div class="form-group">
          <label for="updateName">New Name:</label>
          <input type="text" id="updateName" name="updateName" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-success">Update</button>
      </form>
    <% } %>
  </div>

  <!-- Bootstrap JS (optional, for Bootstrap features) -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>